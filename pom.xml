			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.2.1</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>package</phase>
						<goals>
							<goal>jar-no-fork</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
			        <groupId>org.codehaus.mojo</groupId>
			        <artifactId>build-helper-maven-plugin</artifactId>
			        <version>1.9</version>
			        <executions>
			          <execution>
			            <id>add-test-source</id>
			            <phase>generate-test-sources</phase>
			            <goals>
			              <goal>add-test-source</goal>
			            </goals>
			            <configuration>
			              <sources>
			                <source>target/test/generated</source>
			              </sources>
			            </configuration>
			          </execution>
			          <!-- FIXME -->
			          <execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>src/test/java/de/bluecarat/fluentbuilder/integration/samples</source>
							</sources>
						</configuration>
					</execution>
			        </executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.bsc.maven</groupId>
				<artifactId>maven-processor-plugin</artifactId>
				<version>2.0.5</version>
				<executions>
					<execution>
						<id>generate-fluentbuilders</id>
						<goals>
							<goal>process</goal>
						</goals>
						<phase>generate-test-sources</phase>
						<configuration>
							<compilerArguments>
								<!-- additional generator params -->
								-Adebug=true -AuseIndefineArticles=true -encoding ${project.build.sourceEncoding}
							</compilerArguments>
							<processors>
								<processor>info.ludwikowski.fluentbuilder.processor.FluentBuilderProcessor</processor>
							</processors>
							<sourceDirectory>src/test/java/de/bluecarat/fluentbuilder/integration/samples</sourceDirectory>
							<outputDirectory>target/test/generated</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

